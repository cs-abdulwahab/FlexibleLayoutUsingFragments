<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>

	<TextView
		android:id="@+id/txtEmpID"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		android:layout_marginStart="16dp"

		android:layout_marginTop="16dp"
		android:text="EmpId"

		/>

	<TextView
		android:id="@+id/txtEmpName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="33dp"
		android:layout_marginStart="33dp"
		android:text="Emp Name"

		tools:layout_editor_absoluteY="16dp"
		android:layout_alignBaseline="@+id/txtEmpID"
		android:layout_alignBottom="@+id/txtEmpID"
		android:layout_toRightOf="@+id/txtEmpID"
		android:layout_toEndOf="@+id/txtEmpID"
		/>

</RelativeLayout>